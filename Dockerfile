FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY . .

# Expose port 7860 (HF Spaces default)
EXPOSE 7860

# Run the app
CMD ["uvicorn", "api.main:app", "--host", "0.0.0.0", "--port", "7860"]
